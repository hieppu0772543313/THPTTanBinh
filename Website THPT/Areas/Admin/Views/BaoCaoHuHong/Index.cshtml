@model IEnumerable<Website_THPT.Models.ThongKeBaoCao>
@{
    ViewBag.Title = "QL HƯ HỎNG";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<h2 style="text-align: center; font-weight: bold; color: #90201e">QUẢN LÝ CƠ SỞ VẬT CHẤT</h2>
@{ if (Model != null)
    {
<table class="table">
    <tr>
        <th>
            Mã Báo Cáo
        </th>
        <th>
            Tên Thiết Bị
        </th>
        <th>
            Tình Trạng
        </th>
        <th>
            Số Lượng
        </th>
        <th>
            Tên Lớp
        </th>
        <th>
            Trạng Thái
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @item.baocaohuhong.MaBaoCao
        </td>
        <td>
            @item.cosovatchat.TenThietBi
        </td>
        <td>
            @item.baocaohuhong.TinhTrang
        </td>
        <td>
            @item.baocaohuhong.SoLuong
        </td>
        <td>
            @item.lop.TenLop
        </td>
        <td>
            @item.baocaohuhong.Status
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.baocaohuhong.MaBaoCao })" class="btn btn-warning" role="button"><i class="fa-regular fa-pen-to-square"></i></a>
            <a href="@Url.Action("Delete", new { id = item.baocaohuhong.MaBaoCao })" class="btn btn-danger" role="button"><i class="fa-solid fa-trash"></i></a>
        </td>
    </tr>
    }

</table>
        }
    }

@section NavLeft_Partial{
    @Html.Action("NavLeft_Partial", "Home")
}