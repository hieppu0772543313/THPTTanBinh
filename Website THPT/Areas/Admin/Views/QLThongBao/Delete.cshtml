@model Website_THPT.Models.THONGBAO
@{
    ViewBag.Title = "Xoá thông báo";
    Layout = "~/Areas/Admin/Views/Shared/GV_Layout.cshtml";
}

<h3 style="color:red">Bạn có muốn xoá trang tin này không ?</h3>
<div>
    <h4>XOÁ TIN TỨC ĐỘNG</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Thông Báo
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenThongBao)
        </dd>

        <dt>
            Nội dung
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoiDung)
        </dd>

        <dt>
            Ngày tạo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayTao)
        </dd>



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-warning" />

        </div>
        @Html.ActionLink("< Quay lại Danh sách thông báo", "Index")
    }
</div>
@section NavLeft_GV_Partial{
    @Html.Action("NavLeft_GV_Partial", "Home")
}

