@model Website_THPT.Models.HOCSINH
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<h2 style="font-weight: bold; text-align: center; color: #90201e">THÊM HỌC SINH</h2>

@using (Html.BeginForm("Create", "QLHS", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên HS:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenHS" value="@ViewBag.TenHS"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tên DN:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenDN" value="@ViewBag.TenDN"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Pass:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sPass" value="@ViewBag.Pass"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Lớp:</label>
            <div class="col-md-10">
                @*Hiển thị ViewBag.MaCD vào dropdownlist*@
                @Html.DropDownList("MaLop")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày Sinh:</label>
            <div class="col-md-10">
                <input type="date" name="dNgaySinh" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nơi Sinh:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sNoiSinh" value="@ViewBag.NoiSinh"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Địa Chỉ:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sDiaChi" value="@ViewBag.DiaChi"
                       required />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}



<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ HỌC SINH", "Index")
</div>
@section NavLeft_Partial{
    @Html.Action("NavLeft_Partial", "Home")
}