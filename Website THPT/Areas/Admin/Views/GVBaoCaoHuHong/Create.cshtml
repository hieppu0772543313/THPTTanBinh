@model Website_THPT.Models.BAOCAOHUHONG
@{
    ViewBag.Title = "Phiếu Báo cáo";
    Layout = "~/Areas/Admin/Views/Shared/GV_Layout.cshtml";
}

<h2 style="font-weight: bold; text-align: center; color: #90201e">PHIẾU BÁO CÁO THIẾT BỊ HỎNG</h2>

@using (Html.BeginForm("Create", "GVBaoCaoHuHong", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên Thiết Bị:</label>
            <div class="col-md-10">
                @Html.DropDownList("MaThietBi");
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2"> Tình Trạng</label>
            <div class="col-md-10">
                <input type="text" size="20" name="TinhTrang" value="@ViewBag.TinhTrang"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Số Lượng</label>
            <div class="col-md-10">
                <input type="number" min="1" name="iSoLuong" value="@ViewBag.SoLuong"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên Lớp</label>
            <div class="col-md-10">
                @Html.DropDownList("MaLop")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Trạng Thái</label>
            <div class="col-md-10">
                <input type="radio" name="TrangThai" value="Chưa Duyệt" checked="checked"/>Chưa Duyệt
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-success" />
            </div>
        </div>
    </div>
}



<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ GIÁO VIÊN", "Index")
</div>
@section NavLeft_GV_Partial{
    @Html.Action("NavLeft_GV_Partial", "Home")
}

