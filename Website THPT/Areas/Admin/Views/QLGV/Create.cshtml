@model Website_THPT.Models.GIAOVIEN
@{
    ViewBag.Title = "THÊM GIÁO VIÊN";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<h2 style="font-weight: bold; text-align: center; color: #90201e">THÊM GIÁO VIÊN</h2>

@using (Html.BeginForm("Create", "QLGV", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Mã GV:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sMaGV" value="@ViewBag.MaGV"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tên GV:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenGV" value="@ViewBag.TenGV"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tên DN:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenDN" value="@ViewBag.TenDN"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Pass:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sPass" value="@ViewBag.Pass"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Địa Chỉ:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sDiaChi" value="@ViewBag.DiaChi"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Số điện thoại:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sSdt" value="@ViewBag.Sdt"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Email:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sEmail" value="@ViewBag.Email"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày Sinh:</label>
            <div class="col-md-10">
                <input type="date" name="dNgaySinh" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-success" />
            </div>
        </div>
    </div>
}



<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ GIÁO VIÊN", "Index")
</div>
@section NavLeft_Partial{
    @Html.Action("NavLeft_Partial", "Home")
}