@model Website_THPT.Models.TRANGTIN
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}



<h3 style="color:red">Bạn có muốn xoá trang tin này không ?</h3>
<div>
    <h4>XOÁ TRANGTIN</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Trang Tin
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ten)
        </dd>

        <dt>
            Nội Dung
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoiDung)
        </dd>

        <dt>
            Ngày Tạo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayTao)
        </dd>

        <dt>
            MetaTitle
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Metatitle)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-warning" />

        </div>
        @Html.ActionLink("< Quay lại Trang tin", "Index")
    }
</div>

@section NavLeft_Partial{
    @Html.Action("NavLeft_Partial", "Home")
}