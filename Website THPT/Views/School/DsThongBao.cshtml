@model IEnumerable <Website_THPT.Models.THONGBAO>

@{
    ViewBag.Title = "Danh sách thông báo";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
    .list-group-item.active {
        font-weight: bold;
        text-align: center;
        background-color: #d44545;
        border: none;
    }

        .list-group-item.active:hover {
            background-color: #d44545;
        }
</style>
<ul class="list-group">
    <li class="list-group-item active" >THÔNG BÁO</li>
    
    @foreach (var item in Model)
    {
        <a href="@Url.Action("ThongBao","School", new { ma = item.Ma})" class="list-group-item">@item.TenThongBao</a>

    }
</ul>
